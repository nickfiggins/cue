-- base_tool.cue --
package home

import (
	"tool/cli"
	"tool/exec"
)

// deliberately put in another file to test resolving top-level identifiers
// in different files.
#RunBase: {
	task: echo: exec.Run & {
		stdout: string
		stderr: *"" | string
		mustSucceed: false
	}

	task: display: cli.Print & {
		text: """
		stdout: \(task.echo.stdout)
		stderr: \(task.echo.stderr)
		"""
	}
}

#RunBaseBytes: {
	task: echo: exec.Run & {
		stdout: bytes
		stderr: *'' | bytes
		mustSucceed: false
	}

	task: display: cli.Print & {
		text: """
		stdout: \(task.echo.stdout)
		stderr: \(task.echo.stderr)
		"""
	}
}
